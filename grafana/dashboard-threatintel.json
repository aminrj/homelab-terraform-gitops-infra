{
  "id": null,
  "uid": "threat-intel-cti",
  "title": "Threat Intelligence Automation",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "tags": [
    "threat-intel",
    "cti"
  ],
  "folder": {
    "title": "Threat Intel"
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "IOC Extraction Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (extractor) (rate(threatintel_iocs_extracted_total[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "iocs/min"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "Hallucination Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "threatintel_hallucination_rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "orange",
                "value": 0.15
              },
              {
                "color": "red",
                "value": 0.3
              }
            ]
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        }
      },
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Enrichment Success vs Errors",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (provider) (increase(threatintel_enrichment_success_total[1h]))"
        },
        {
          "refId": "B",
          "expr": "-sum by (provider) (increase(threatintel_enrichment_error_total[1h]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "type": "table",
      "title": "Validated IOC Leaderboard",
      "datasource": {
        "type": "postgres",
        "uid": "threat-intel-ro"
      },
      "targets": [
        {
          "refId": "A",
          "rawSql": "SELECT i.value AS ioc, i.ioc_type AS type, fc.composite_score AS score, fc.status, fc.updated_at\\nFROM threatintel.final_candidate fc\\nJOIN threatintel.ioc i ON i.id = fc.ioc_id\\nWHERE fc.status = 'validated'\\nORDER BY fc.composite_score DESC\\nLIMIT 25;",
          "format": "table"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 8
      },
      "options": {
        "showHeader": true
      }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "provider",
        "label": "Provider",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "definition": "label_values(threatintel_enrichment_success_total, provider)",
        "hide": 0,
        "refresh": 1
      }
    ]
  },
  "time": {
    "from": "now-24h",
    "to": "now"
  }
}
